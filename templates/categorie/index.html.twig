{% extends 'admin/index.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Categorie index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>CatId</th>
                    <th>CatNom</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.catId }}</td>
                    <td>{{ categorie.catNom }}</td>
                    <td>
                        <a href="{{ path('categorie_show', {'catId': categorie.catId}) }}">show</a>
                        <a href="{{ path('categorie_edit', {'catId': categorie.catId}) }}">edit</a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('categorie_new') }}">Create new</a>
   </div>
</div>
{% endblock %}