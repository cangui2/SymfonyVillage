{% extends 'base.html.twig' %}

{% block title %}Village{% endblock %}

{% block body %}


<section>
    <div class="container" id="fond" style="margin-left: 375px;">
        <div class="row col-lg-12 ">

            <div class="col-lg-4" style="/*! padding-left: 0px; */left: 10px;top: 30px">
                <div class="vertical-menu">

                    <a href="#" class="active">Home</a>

                    {% for sousCategorie in aSousCategorie  %}


                    <a href="{{ path('produit',{id:sousCategorie.catId})}}">{{sousCategorie.catNom}}</a>


                    {% endfor %}

                </div>
            </div>

            {% for Produits in produit %} {# boucle 1er tableau cat #}

            <div class="card mb-3" style="min-height: 330px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <a href={{ path('fiche_produit',{'id':Produits.proId}) }}>
                            <img src="..\images\Produits\{{Produits.proId}}.{{Produits.proPhoto}}" alt="produit"
                                style="width:100%">
                        </a>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{Produits.cat.catNom}}</h5>
                            <p class="card-text">{{Produits.proDescription}}</p>
                            <p class="price">{{Produits.proPrix}}â‚¬</p>
                          
                            <a href={{ path('panier_add',{'id':Produits.proId})}} class="btn btn-success float-right">
                                <i class=" fas fa-shopping-cart mr-1"></i>
                                Ajouter
                            </a>
                        </div>
                    </div>
                </div>
            </div>





            {% endfor %}

        </div>
    </div>
</section>
{% endblock %}