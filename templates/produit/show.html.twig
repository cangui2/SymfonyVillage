{% extends 'admin/index.html.twig' %}
{% block title %}Produit{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ProId</th>
                <td>{{ produit.proId }}</td>
            </tr>
            <tr>
                <th>ProLibelle</th>
                <td>{{ produit.proLibelle }}</td>
            </tr>
            <tr>
                <th>ProDescription</th>
                <td>{{ produit.proDescription }}</td>
            </tr>
            <tr>
                <th>ProPrix</th>
                <td>{{ produit.proPrix }}</td>
            </tr>
            <tr>
                <th>ProRef</th>
                <td>{{ produit.proRef }}</td>
            </tr>
            <tr>
                <th>ProStock</th>
                <td>{{ produit.proStock }}</td>
            </tr>
            <tr>
                <th>ProStockAlerte</th>
                <td>{{ produit.proStockAlerte }}</td>
            </tr>
            <tr>
                <th>ProCouleur</th>
                <td>{{ produit.proCouleur }}</td>
            </tr>
            <tr>
                <th>ProPhoto</th>
                <td>{{ produit.proPhoto }}</td>
            </tr>
            <tr>
                <th>ProDateAjout</th>
                <td>{{ produit.proDateAjout }}</td>
            </tr>
          
            <tr>
                <th>ProBloque</th>
                <td>{{ produit.proBloque ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('produit_index') }}">back to list</a>

    <a href="{{ path('produit_edit', {'proId': produit.proId}) }}">edit</a>

    {{ include('produit/_delete_form.html.twig') }}
        </div>
</div>
{% endblock %}
