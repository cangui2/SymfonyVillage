{% extends 'base.html.twig' %}

{% block title %}Hello FicheProduitController!{% endblock %}

{% block body %}

<div class="container"id="fond">
    <div class="row produit" >
        <div class="col-lg-12" style="/*! padding-left: 0px; */left: 10px;top: 30px">

            <div class="example-wrapper">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img src="{{asset('images/Produits/' ~ article.proId ~ '.' ~ article.proPhoto) }}"
                                class="card-img" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">{{article.proLibelle}}</h5>
                                <p class="card-text">{{article.proDescription}}</p>
                                <p class="card-text"><small class="text-muted">Date d'ajout : {{article.proDateAjout}}</small></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}